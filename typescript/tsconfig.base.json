{
    "compilerOptions": {
      "removeComments": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "alwaysStrict": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noImplicitReturns": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "stripInternal": true,
      "moduleResolution": "node",
      "importHelpers": true
    },
    "include": ["../src/"],
    "exclude": ["../src/__tests__"]
}